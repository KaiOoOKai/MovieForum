<body class="d-flex flex-column min-vh-100">

    <!--<ul= id="myList"></ul>-->
    <div class="container-fluid">
        <div class="row" id="movieRow">
        </div>
        <style>
            h1,
            p {
                text-align: center;
            }

            .threads {
                text-align: center;
                list-style-type: none;
            }

            .links {
                color: black;
            }

            .card-title a:link {
                text-decoration: none;
                color: #0F2027;
            }

