                text-decoration: underline;
            }
        </style>
    </div>
    <section class="d-flex">
        <div class="col-9 flex-grow-1 d-flex flex-column ">
            <div class="container mt-5 p-3">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-bordered align-middle text-center">

                            <thread id="usersTable">
                                <tr>
                                    <h3 class="bg-dark text-center text-light">Forum search results related to "<%=
                                            keyword %>"</h5>
                                </tr>
                            </thread>
                            <tbody class="align-middle text-center" id="myList">
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
    </section>

    <script>
        async function getAllMovies() {
            const api_url = '/api/movies'
            const response = await fetch(api_url.concat(`?keyword=${'<%= keyword %>'}`));
            const data = await response.json();
            const list = document.getElementById("myList");
            let movieRowBody = "";
            data.forEach((item) => {
                movieRowBody = movieRowBody + `<tr> 
        <td>
          <h5 class="card-title"><a href=/thread?threadTitle=${encodeURIComponent(item.threadTitle)}>${item.threadTitle}</a></h5>
        </td>
        <td>Time: ${item.threadTime}</td>
        <td>User: ${item.username}</td>
        <td>Content: ${item.threadContent}</td>
      </tr>`;;
            });

            document.getElementById("myList").innerHTML = movieRowBody;
        }
        getAllMovies();
    </script>
    <div id="myList"></div>
</body>

