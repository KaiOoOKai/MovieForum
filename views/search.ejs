<body class="d-flex flex-column min-vh-100">
    <h1>Search Result</h1>

    <!--<ul= id="myList"></ul>-->
    <div class="container-fluid">
        <div class="row" id="movieRow">
        </div>
        <style>
            .card {
                margin-top: 10px;
                margin-left: 10px;
                margin-bottom: 10px;
                margin-right: 10px;
                max-height: 300px;
                min-height: 200px;
                transition: .1s;
            }

            .card-img-top {
                width: 100%;
                height: 100em;
                object-fit: contain;
            }

            .card:hover {
                box-shadow: 2px 2px 2px grey;
                transform: scale(1.05);
            }
        </style>
    </div>
    <div id="message"></div>

    <script>
        const api_url = '/api/movies'
        async function getmovies() {
            const response = await fetch(api_url.concat(`?keyword=${'<%= keyword %>'}`));
            const data = await response.json();
            const list = document.getElementById("myList");
            if (data.length == 0) {
                document.getElementById("message").innerHTML = `No movies with keyword '${'<%= keyword %>'}'`;
                return;
            }
            let movieRowBody = "";
            data.forEach((item) => {
                movieRowBody = movieRowBody + `<div class="card">
          <div class="card-body">
            <h5 class="card-title">${item.threadTitle}</h5>
            <ul class="list-group list-group-flush">
                                            <li class="list-group-item">
                                                Time: ${item.threadTime}
                                            </li>
                                               <li class="list-group-item">
                                                User: ${item.username}
                                            </li>
                                               <li class="list-group-item">
                                                Content: ${item.threadContent}
                                            </li>
                                        </ul>
            <a href=/api/moviedetail?ID=${item.ID}" class="stretched-link"></a>
          </div>
        </div>`;
            });
            document.getElementById("movieRow").innerHTML = movieRowBody;
        }
        console.log('<%= keyword %>');
        getmovies();
    </script>

</body>

</html>