<script src="/socket.io/socket.io.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>

<script>
  async function getAllMovies() {
    const api_url = '/api/getAllMovies'
    const response = await fetch(api_url);
    const data = await response.json();
    const list = document.getElementById("myList");
    let movieRowBody = "";
    data.forEach((item) => {
      movieRowBody = movieRowBody + `
      <tr> 
        <td>
          <h5 class="card-title"><a href=/thread?threadTitle=${encodeURIComponent(item.threadTitle)}>${item.threadTitle}</a></h5>
        </td>
        <td>Time: ${item.threadTime}</td>
        <td>User: ${item.username}</td>
        <td>Content: ${item.threadContent}</td>
      </tr>
      
          `;
    });

    document.getElementById("myList").innerHTML = movieRowBody;
  }
  getAllMovies();
</script>

<style>
  h1,
  p {
    text-align: center;
  }

  .card-title a:link {
    text-decoration: none;
  }



  .card-title a:hover {
    text-decoration: underline;
  }
</style>

