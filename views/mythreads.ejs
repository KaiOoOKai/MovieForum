<!DOCTYPE html>
<html>

<head>
  <title>My Threads</title>
  <style>
  </style>
</head>
<script src="/socket.io/socket.io.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>

<script>
  async function getAllMovies() {
    const api_url = '/api/getMyThreads'
    const response = await fetch(api_url);
    const data = await response.json();
    const list = document.getElementById("myList");
    let movieRowBody = "";
    data.forEach((item) => {
      movieRowBody = movieRowBody + `<div class="card" style="width: 40rem;">
          <div class="card-body">
              <h5 class="card-title mx-auto d-flex justify-content-around"><a href=/thread?threadTitle=${encodeURIComponent(item.threadTitle)}>${item.threadTitle}</a></h5>
              <ul class="list-group list-group-flush">
                                              <li class="list-group-item mx-auto d-flex justify-content-around">
                                                  Time: ${item.threadTime}
                                              </li>
                                              <li class="list-group-itemmx-auto d-flex justify-content-around">
                                                  User: ${item.username}
                                              </li>
                                              <li class="list-group-itemmx-auto d-flex justify-content-around">
                                                  Content: ${item.threadContent}
                                              </li>
                                          </ul>
          </div>
        </div>`;
    });

    document.getElementById("myList").innerHTML = movieRowBody;
  }
  getAllMovies();
</script>

<style>
  h1,
  p {
    text-align: center;
  }

  .threads {
    text-align: center;
    list-style-type: none;
  }

  .links {
    color: black;
  }

  #centre {
    text-align: center;
  }

  .card-title a:link {
    text-decoration: none;
    color: #0F2027;
  }

  .card-title a:hover {
