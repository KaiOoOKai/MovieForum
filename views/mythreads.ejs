<body class="d-flex flex-column min-vh-100">
  <%- include('navbar2.ejs') %>

    <br>
    <h1>My Threads</h1>
    <br>
    <h3 class="text-center">Here are the threads that you have created</h3>
    <br>
    <div id="centre">
      <button class="btn btn-secondary mx-auto d-flex justify-content-around"
        onclick="window.location.href='/addthread'">Create New Thread</button>
    </div>

    <div class="container mt-4 mx-auto d-flex justify-content-around">
      <div id="myList"></div>
    </div>

    <br>
    <br>




    <script>
      // If user is not subscribed to anything, put up a message saying you are not subscribed to any threads.
      if ($('#myList').html() === "") {
        $('#myList').append("<p>You currently have not created any threads.</p>");
        $('#myList').append("<p>Any threads you create will appear here.</p>");
      } 
    </script>

    <br>
    <%- include('footer.ejs') %>
